@using SistemaGerenciador.Domain

@inject NavigationManager _navigation;

@if (listaInventories.Count > 0)
{
    foreach (var items in listaInventories)
    {
        <tr>
            <td>@items.Name</td>
            <td>@items.Quantity</td>
            <td>@items.Price.ToString("c")</td>
            <td>
                <button type="button" class="text-blue-700 hover:text-white border border-blue-700 hover:bg-blue-800 focus:ring-4 focus:outline-none focus:ring-blue-300 font-medium rounded-lg text-sm px-5 py-2.5 text-center mr-2 mb-2 dark:border-blue-500 dark:text-blue-500 dark:hover:text-white dark:hover:bg-blue-600 dark:focus:ring-blue-800">Select</button>

                <button onclick="@(() => EditarInventory(items.Id))" type="button" class="text-purple-700 hover:text-white border border-purple-700 hover:bg-purple-800 focus:ring-4 focus:outline-none focus:ring-purple-300 font-medium rounded-lg text-sm px-5 py-2.5 text-center mr-2 mb-2 dark:border-purple-400 dark:text-purple-400 dark:hover:text-white dark:hover:bg-purple-500 dark:focus:ring-purple-900">Edit</button>
            </td>
        </tr>
    }
}else
{
    <tr>Nenhum item encontrado :(</tr>
}


@code {

    [Parameter]
    public List<Inventory> listaInventories { get; set; } = new();

    private void EditarInventory(int idInventory)
    {
        _navigation.NavigateTo($"/editInventory/{idInventory}");
    }
}
