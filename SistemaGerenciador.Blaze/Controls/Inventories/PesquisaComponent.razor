<div class="mt-5 md:col-span-2 md:mt-0">

    <div class="mt-1 flex rounded-md shadow-sm">

        <input type="text"
               name="company-website"
               id="company-website"
               class="block w-full flex-1 rounded-none rounded-r-md border-gray-300 focus:border-indigo-500 focus:ring-indigo-500 sm:text-sm"
               placeholder="www.example.com"
               @bind-value="procurarInventory">
    </div>

    <div class="bg-gray-50 px-4 py-3 text-right sm:px-6">
        <button type="button"
                @onclick="AoPesquisar"
            class="inline-flex justify-center rounded-md border border-transparent bg-indigo-600 py-2 px-4 text-sm font-medium text-white shadow-sm hover:bg-indigo-700 focus:outline-none focus:ring-2 focus:ring-indigo-500 focus:ring-offset-2">
            Procurar</button>

    </div>
</div>

@code {
    private string procurarInventory = string.Empty;

    [Parameter]
    public EventCallback<string> AoPesquisarInventario { get; set; }

    private void AoPesquisar(){

        AoPesquisarInventario.InvokeAsync(procurarInventory);
    }

    }
