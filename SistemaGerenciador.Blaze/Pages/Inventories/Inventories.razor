@page "/inventories"

@inject NavigationManager navigation;
<PesquisaComponent 
    AoPesquisarInventario="AoPesquisarInventario">
</PesquisaComponent>

<ListaInventarioComponent palavraPesquisada="@_pesquisa"></ListaInventarioComponent>

<hr />

<button type="button" class="bg-blue-500 hover:bg-blue-400 text-white font-bold py-2 px-4 border-b-4 border-blue-700 hover:border-blue-500 rounded"
    @onclick="AdicionarInventory">
    Adicionar Inventory
</button>

@code {
    private string _pesquisa = string.Empty;

    private void AoPesquisarInventario(string pesquisa){
        this._pesquisa = pesquisa;
    }

    private void AdicionarInventory()
    {
        navigation.NavigateTo("addinventory");
    }
}
